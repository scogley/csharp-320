@model IEnumerable<HelloWorldASP_MVC.Models.Product>

    @{
        ViewBag.Title = "Products";
    }

    @if (Model.Count() > 0)
    {
                      <table>
                          @foreach (var product in Model)
                          {
                              @switch (product.ProductCount)
                              {
                                  case 0:
                                      <tr>
                                          <td>@product.Name</td>
                                          <td>@product.Price</td>
                                          <td>"out of stock"</td>
                                      </tr>
                                      break;
                                  case 1:
                                      <tr>
                                          <td>@product.Name</td>
                                          <td>@product.Price</td>
                                          <td>"low stock"</td>
                                      </tr>
                                      break;
                                  default:
                                      <tr>
                                          <td>@product.Name</td>
                                          <td>@product.Price</td>
                                          <td>@product.ProductCount</td>
                                      </tr>
                                      break;
                              }
                          }
                      </table>
    }
    else
    {
        <h2>No product data found.</h2>
    }
