
@model Homework6.Models.Response

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <style>
        btn a {
            color: white;
            text-decoration: none;
        }

        body {
            background-color: #f1f1f1;
        }
    </style>
    <title>Birthday Card Generator</title>
</head>
<body>
    <h4>Send a Birthday Card</h4>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="CardSent" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label" for="From">From</label>
                    <input class="form-control input-validation-error" type="text"
                           data-val="true" data-val-required="Please enter your From" id="From" name="From" value="" />
                    <span class="text-danger field-validation-error" data-valmsg-for="From"
                          data-valmsg-replace="true">Please enter From</span>
                </div>

                <div class="form-group">
                    <label asp-for="To" class="control-label">To</label>
                    <input asp-for="To" class="form-control input-validation-error" type="text"
                           data-val="true" data-val-required="Please enter To" id="To" name="To" value="" >
                    <span asp-validation-for="To" class="text-danger field-validation-error" data-valmsg-for="To"
                          data-valmsg-replace="true">Please enter To</span>
                </div>

                <div class="form-group">
                    <label asp-for="Message" class="control-label">Message</label>
                    <input asp-for="Message" class="form-control input-validation-error" type="text"
                           data-val="true" data-val-required="Please enter Message" id="Message" name="Message" value=""/>
                    <span asp-validation-for="Message" class="text-danger field-validation-error" data-valmsg-for="Message"
                          data-valmsg-replace="true">Please enter Message</span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Send Card" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    

</body>
</html>

